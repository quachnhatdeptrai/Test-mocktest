<%- include('partials/head', { title: "Quach Nhat's Book Details" }) %>

<!-- Header-->
<header class="site-header">
    <img src="/images/logo.png" alt="logo" width="64" height="64">
    <nav class="site-nav">
        <a href="/">Home Page</a>
    </nav>
</header>

<!-- Main content-->
<main class="book-page">
    <nav class="breadcrumb-nav">
        <img src="/images/logo.png" alt="logo" width="32" height="32">
        <a href="/">Home Page</a>
        <span class="breadcrumb-separator">â€º</span>
        <a href="/book/<%= book.slug %>"><%= book.title %></a>
    </nav>

    <section class="book-hero mb-5">
        <div class="book-hero-image" style="background-image: url('<%= book.image %>');">
            <div class="book-hero-content">
                <h1><%= book.title %></h1>
                <h2>By <%= book.author %></h2>
                <p><%= book.description %></p>
                <span class="book-meta"><%= book.category %> | Published in <%= book.year %></span>
            </div>
        </div>
    </section>

    <!-- Related books in the same category -->
    <section class="related-books mb-4">
        <h3>Related Books</h3>
        <div class="row g-3">
        <% if (relatedBooks.length === 0) { %>
            <p class="text-muted">No related books found.</p>
        <% } %>
        <% relatedBooks.forEach(function (relatedBook) { %>
            <div class="col-12 col-sm-6 col-lg-4">
                <article class="related-card" style="background-image: url('<%= relatedBook.image %>');">
                    <div>
                        <h4><a href="/book/<%= relatedBook.slug %>"><%= relatedBook.title %> By <%= relatedBook.author %></a></h4>
                    </div>
                </article>
            </div>
        <% }) %>
        </div>
    </section>

    <!-- Back button here -->
    
    <div class="text-center">
        <button id="btn-back" class="btn btn-primary btn-sm" onclick="window.history.back()">Back</button>
    </div>
    
  </main>
    
 <!-- Footer -->
<%- include('partials/footer') %>
</body>
</html>
